<% include templates/header.ejs %>
<% include templates/sidebar.ejs %>
<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/dashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item active"> FAQ </li>
    </ol>
    <div class="row">
        <div class="col-md-12 column">
            <div class="box-header">
                <h3 class="box-title">Add FAQ Details</h3>
            </div>
            <form action="/add_new_faq" method="post" class="mt-4 mb-4">
                <div class="pro-section">
                    <h6 class="user-title">FAQ Info</h6>
                    <div class="user-body">
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label>Question<span class="text-danger">*</span></label>
                                <input type="text" name="question" id="question" required class="form-control" placeholder="type your question">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-12"">
                                <label><h6>Answer</h6></label>
                                <textarea  id="editor10" name="answer" rows="4" required class="write_msg form-control" placeholder="type your answer"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-2">
                                <button class="btn btn-primary btn-sm w-100" type="submit" ><i class="fas fa-fw fa-save"></i> Save </button>
                            </div>
                            <div class="form-group col-md-2">
                                <a href="/FAQ" class="btn btn-warning btn-sm w-100"><i class="fas fa-fw fa-ban"></i> Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<% include templates/footer.ejs %>  

<script>
	CKEDITOR.replace('editor');
</script>