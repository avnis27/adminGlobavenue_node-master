<!-- Include Header -->
<% include templates/header.ejs %>
<!-- Include Sidebar -->
<% include templates/sidebar.ejs %>
<!--// -->
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Location </li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <div class="row">
                <div class="col-md-10">
                    <i class="fas fa-table"></i> Country
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 column">
                    <div class="box box-primary">
                        <div class="box-header">
                            <p class="box-title">Add New Country</p> 
                        </div>
                        <form action="/addLocation" method="post">
                            <div class="box-body">
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label>Country<span class="text-danger">*</span></label>
                                        <input type="text" name="country" required id="country" required class="form-control">
                                    </div>
                                    <div class="form-group col-md-5">
                                        <div class="input text">
                                            <label>&nbsp;</label><br>
                                            <button class="btn btn-primary btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div><hr>
            <div class="table-responsive">
                <table class="table" width="100%" id="dataTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Location</th>
                            <th>Created date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Location</th>
                            <th>Created date</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <%
                            if(country_result != '')
                            {
                                for(var i=0; i < country_result.length; i++)
                                {
                                    %>
                                        <tr>
                                            <td>
                                                <%= country_result[i].country %>
                                            </td>	
                                            <td>
                                                <%= country_result[i].created_at %>
                                            </td>
                                            <td>
                                                <a href="/editCountry/<%= country_result[i]._id %>" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-edit text-white"></i>&nbsp;&nbsp;Edit
                                                </a>
                                                &nbsp;
                                                <a class="btn btn-danger btn-sm text-white" onClick="removeDetails('removeCountry','<%= country_result[i]._id %>')" ><i class="fas fa-trash text-white" style="cursor:pointer"></i>&nbsp;&nbsp;Delete</a>											
                                            </td>												
                                        </tr>
                                    <%	
                                }
                            }
                        %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Include Footer -->
<% include templates/footer.ejs %>
<!--// -->