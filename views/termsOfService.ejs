<!-- Header-->
<% include templates/header.ejs %>
<% include templates/sidebar.ejs %>
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <i class="fa fa-home"></i>
            <a href="/">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Terms Of Service</li>
    </ol>
    <h3 class="box-title">Terms Of Service Details</h3>
    <form action="/TermsOfService" method="post">
        <div class="row clearfix">
            <div class="col-md-12">
                <div class="pro-section">
                    <h6 class="user-title">Content</h6>
                    <div class="user-body">
                        <div class="row clearfix">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label><h6>Title</h6></label>
                                    <input type="text" name="title" id="title" value= <%= (termsAndService.title)%> class="form-control">
                                </div>
                                <div class="form-group">
                                    <label><h6>Description</h6></label>
                                    <textarea  id="editor" name="description" rows="4"  value="<%= termsAndService.description %> required class="write_msg form-control" placeholder="Type a aboutsAs details"> <%= termsAndService.description %> </textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix form-group ">
            <div class="col-md-2">
                <button class="btn btn-primary btn-sm w-100" type="submit" ><i class="fas fa-fw fa-save"></i> Save</button>
            </div>
        </div>
    </form>   
</div>
    
<!-- Footer -->
<% include templates/footer.ejs %>  

<script>
	CKEDITOR.replace('editor');
</script>