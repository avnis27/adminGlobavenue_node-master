<% include templates/header.ejs %>
<% include templates/sidebar.ejs %>
<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <i class="fa fa-home"></i>
          <a href="/">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">FAQ</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <div class="row">
                <div class="col-md-10">
                    <i class="fas fa-table"></i> FAQ
                </div>
                <div class="col-md-2">
                <a href="/add_new_faq" class="btn btn-primary btn-block" title="Plan">Add New</a>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                      <th> question </th>
                      <th> answer</th>
                      <!-- <th> status </th> -->
                      <th> action </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th> question </th>
                        <th> answer</th>
                        <!-- <th> status</th> -->
                        <th> action </th>
                    </tr>
                    </tfoot>
                    <tbody>
                        <%
                            if(faq_list != '')
                            {
                                for(var i=0; i < faq_list.length; i++)
                                {
                                    %>
                                        <tr>
                                        <td><%= faq_list[i].question %></td>	
                                        <td><%= faq_list[i].answer%></td>	
                                        <!-- <td>
                                            <%
                                            if(faq_list[i].status == true)
                                            {
                                                %>
                                                Active
                                                <%
                                            }
                                            else
                                            {
                                                %>
                                                Inactive
                                                <%
                                            }
                                            %>
                                        </td> -->
                                        <td>
                                            <a href="/edit_faq/<%= faq_list[i]._id %>" class="btn btn-primary btn-sm">
                                                <i class="fas fa-edit text-white"></i>&nbsp;&nbsp;Edit
                                            </a>
                                            &nbsp;
                                            <a class="btn btn-danger btn-sm text-white" onClick="removeDetails('removefaq','<%= faq_list[i]._id %>')" ><i class="fas fa-trash text-white" style="cursor:pointer"></i>&nbsp;&nbsp;Delete</a>											
                                            <!-- <i class="fas fa-trash text-danger" onClick="removeDetails('removeplan','<%= faq_list[i]._id %>')" style="cursor:pointer"></i> -->
                                        </td>
                                        </tr>
                                    <%
                                }
                            }
                        %>
                </tbody>
            </table>

        </div>
    </div>
</div>
<!-- Footer -->
<% include templates/footer.ejs %>   